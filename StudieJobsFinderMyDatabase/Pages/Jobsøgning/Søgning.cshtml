@page
@model StudieJobsFinderMyDatabase.Pages.Jobsøgning.SøgningModel
@{
    ViewData["Title"] = "Job Search";
}

<h1>Job Search</h1>

@*

*@

<form method="post"> 
    <div class="form-group mb-3">
        <label asp-for="@Model.Input" class=" control-label fw-bold fs-5"></label>
        <input asp-for="@Model.Input" class="form-control" />
    </div>
<p>
    <div class=" form-group mb-0-3">
        <input type="submit" asp-page-handler="JobSearch" value="Søgning" class="btn btn-outline-primary"/>
    </div>
</form>

<div>
    @foreach (var job in Model.Jobs)
    {
        <p>@job.Titel</p>
    }
</div>


<h1>Jobsøgning</h1>

@if (Model.Jobs != null && Model.Jobs.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Titel</th>
                <th>Beskrivelse</th>
                <th>Kategori</th>
                <th>Lokation</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model.Jobs)
            {
                <tr>
                    <td>@job.Titel</td>
                    <td>@job.Beskrivelse</td>
                    <td>@job.Kategori</td>
                    <td>@job.Lokation</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model.Jobs != null)
{
    <p>Ingen job fundet.</p>
}
