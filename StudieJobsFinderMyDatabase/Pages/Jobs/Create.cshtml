@page
@model StudieJobsFinderMyDatabase.Pages.Jobs.CreateModel
@{
    ViewData["Title"] = "Opret jobopslag";
}

<h1>Opret jobopslag</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Job.Titel" class="control-label"></label>
        <input asp-for="Job.Titel" class="form-control" />
        <span asp-validation-for="Job.Titel" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Job.Beskrivelse" class="control-label"></label>
        <textarea asp-for="Job.Beskrivelse" class="form-control"></textarea>
        <span asp-validation-for="Job.Beskrivelse" class="text-danger"></span>
    </div>

    <div class="form-group">

        <label asp-for="Job.Kategori" class="control-label"></label>
        <textarea asp-for="Job.Kategori" class="form-control"></textarea>
        <span asp-validation-for="Job.Kategori" class="text-danger"></span>

        <label asp-for="Job.OffentliggørelsesDato" class="control-label"></label>
        <input asp-for="Job.OffentliggørelsesDato" class="form-control" type="date" />
        <span asp-validation-for="Job.OffentliggørelsesDato" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="Job.Deadline" class="control-label"></label>
        <input asp-for="Job.Deadline" class="form-control" type="date" />
        <span asp-validation-for="Job.Deadline" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Job.Lokation" class="control-label"></label>
        <input asp-for="Job.Lokation" class="form-control" />
        <span asp-validation-for="Job.Lokation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Job.Løn" class="control-label"></label>
        <input asp-for="Job.Løn" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Job.Løn" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Job.Kompetencer" class="control-label"></label>
        <textarea asp-for="Job.Kompetencer" class="form-control"></textarea>
        <span asp-validation-for="Job.Kompetencer" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Job.Kategori" class="control-label"></label>
        <input asp-for="Job.Kategori" class="form-control" />
        <span asp-validation-for="Job.Kategori" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Opret" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

